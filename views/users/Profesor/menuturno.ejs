<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">

</head>
<body>
    <div class=" container-grid container">
    <div class = "text-center">
    <h2>Turno: <%= turn.name %></h2>
    <button>modificar</button>
    </div>
    <h4>Kits asignados</h4>
    <div class="scroll-container" >
        <table>
            <tbody>

            <% kitsAdded.forEach (kit => { %>
                <tr>
                    <td>
                        <a href="/kit/<%= kit.id %>/show"><h6>- <%= kit.name %></h6></a>

                    <h6>- <%= kit.name %></h6>

                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
        <h4>Equipos: </h4>
        <div class="scroll-container" >

        <table>
            <tbody>

            <% teams.forEach (team => { %>
                <tr>
                    <td>
                        <a href="/team/<%= team.id %>/show"><h6>- <%= team.name %></h6></a>

                        <h6>- <%= team.name %></h6>

                    </td>
                </tr>
            <% }); %>
            
            </tbody>
        </table>
    </div>

    <form id="form-modify-turn" style="display: none;">
        <label>Fecha de inicio:</label>
        <input type="date" id="date" name="date" max="3000-01-01" onfocus="this.min = new Date().toISOString().split('T')[0]" required>
        <input type="time" id="time" name="time" required>
        
    </form>
    <h5>Alumnos inscritos: </h5>
        <% students.forEach(student =>{ %>
            <h6><%= student.name %></h6>
        <% }) %>
    <button>iniciar Actividad</button>
</body>