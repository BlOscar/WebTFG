        function closeManual(){
            document.getElementById("addHUmanual").style = "";
            document.getElementById("addHUmanual_on").style = "display: none;";
            document.getElementById("addHu").style = "display: none;";

        }
        function addManual(){
            document.getElementById("addHUmanual").style = "display: none;";
            document.getElementById("addHUmanual_on").style = "";
            document.getElementById("addHu").style = "";

        }
        try{
            document.getElementById("addHUmanual").addEventListener("button",async (e)=>{
                e.preventDefault();
                debugger;
                document.getElementById("addHUmanual").style = "display: none;";

            })
        }catch(err){
            console.log(err);
        }
    </script>

