        <div class="scroll-container">

        
        <table >
            <tr>
                <th>Options</th>
            </tr>
            <tbody class="scroll-container">
            <% HUList.forEach (hu => { %>
                <tr>
                    <td>
                        <p class="input-form-label">
                            <input type="checkbox" name="huList[]" id="huList[]" value="<%=hu.id%>"><%= hu.name %>
                            </p>
                    </td>
                    
                </tr>

            <% }); %>
    </tbody>
            
        </table>
    </div>
        <% } else { %>
            <h6>Necesitas a√±adir una HU</h6>
            <% } %>
    
