<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">

</head>
<body>
    <div class="header" style="background-color: lightslategrey;">
        <h6>usuario: <%=name%></h6>
        <h6>Rol: Profesor</h6>
            <a href="/logout" class="btn-redirect">Cerrar sesion</a></div>
    </div>

    </div>
    <div class="container" style="justify-content: center;">
    <div class="container-grid">
        <section style="margin: 10 px;padding: 0.15px 10px; border: 1px solid grey; border-radius: 16px">
            <h3>Lista de Turnos: </h3>
            <div class="scroll-container">
            <% turno.forEach(t =>{ %>
                <a href="/turno/<%= t.id %>/show"><h4>Turno: <%= t.name %></h4></a>
                <%if(t.isStarted){%>
                    <p>Turno iniciado</p>
                    <a href="/activity/<%= t.id%>/session" class="btn-redirect" style="background-color: green;">Ir a actividad</a>
                <%}else{%>
                    <p>Fecha Inicio:<h6 name="patata[]" id="start-time<%= t.id%>"><%= t.startDate.toISOString() %></h6></p>
                    <%}%>
                

            <% })%>
        </div>
        </section>
    </div>
    <div class="container-grid" style="flex-direction: column ;padding: 10px;">
        <a href="/kit/add" class="btn-redirect">Añadir Kit</a>
        <a href="/kit/showkits" class="btn-redirect">Ver Kits</a>
        <a href="/turno/addTurno" class="btn-redirect">Añadir Turno</a>
        <a href="/turno/seePastTurn" class="btn-redirect">Ver Turnos Pasados</a>

    </div>
</div>
    <script>
        function getHora(){
            var turno = <%- JSON.stringify(turno) %>;
            turno.forEach(p =>{
                debugger;
                const time = document.getElementById(`start-time${p.id}`).textContent;
                let prueba = new Date(time);
                document.getElementById(`start-time${p.id}`).textContent = "Día: " + prueba.toLocaleDateString('es-ES') + "\tHora: "+ prueba.toLocaleTimeString('es-ES');
            
            });
             
        }
        getHora();
    </script>
</body>
</html>